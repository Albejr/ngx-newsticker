{
  "compileOnSave": false,
  "compilerOptions": {
    // Strict mode
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,

    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2022",
    "module": "ES2022",
    "lib": ["ES2022", "dom"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "ngx-newsticker-albe": [
        "dist/ngx-newsticker-albe"
      ]
    },
    "forceConsistentCasingInFileNames": true,
  }
}
